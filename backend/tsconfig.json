{
  "compilerOptions": {
    "target": "ES6",
    "lib": ["ES2023"],
    "module": "ES2020",
    "skipLibCheck": true,
    "types": ["vitest/globals"],

    "moduleResolution": "Node",
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "paths": {
      "@/*": ["./src/*"]
    }
  }
}
